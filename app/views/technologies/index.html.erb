<div class="container">
  <div class="filters">
    <%= form_with method: 'get', local: true do %>
      <div class="input-block">
        <p>category filter: </p>
        <%= select_tag(:category, options_for_select(@categories,
                                                     params[:category])) %>
      </div>
      <div class="input-block">
        <p>sort by: </p>
        <%= select_tag(:sort_by, options_for_select(technologies_sort_options,
                                                    params[:sort_by])) %>
      </div>
      <%= submit_tag('Apply') %>
  <% end %>
  </div>
  <div class="tech-container">
    <%= render @technologies if @technologies.any? %>
  </div>
  <%= will_paginate @technologies %>
</div>
